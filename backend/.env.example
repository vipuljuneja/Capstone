# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/pip-db?retryWrites=true&w=majority

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_BUCKET=pip-assets

# D-ID API (for avatar generation)
DID_API_KEY=your-did-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:19000,http://localhost:19006

# JWT (optional, if using custom tokens)
JWT_SECRET=your-jwt-secret-key